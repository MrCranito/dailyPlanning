<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip">

    <CheckBox
        android:id="@+id/registerEvent"
        android:layout_width="47dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="352dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="352dp"
        android:layout_marginTop="0dp"
        android:button="@drawable/like"
        />

    <ImageView
        android:id="@+id/isLate"
        android:layout_width="37dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/description"
        android:layout_toRightOf="@+id/description"
        android:background="@drawable/alert"
        android:visibility="invisible"
        tools:visibility="invisible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="50dp"
        android:layout_height="13dp"
        android:layout_alignBottom="@+id/startDate"
        android:layout_alignEnd="@+id/startDate"
        android:layout_alignLeft="@+id/startDate"
        android:layout_alignRight="@+id/startDate"
        android:layout_alignStart="@+id/startDate"
        android:layout_below="@+id/textView2"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="11dp"
        android:text="TextView"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/description"
        android:layout_width="216dp"
        android:layout_height="51dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/startDate"
        android:layout_toRightOf="@+id/startDate"
        android:text="Description"
        android:textSize="12sp"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="51dp"
        android:layout_height="13dp"
        android:layout_alignEnd="@+id/startDate"
        android:layout_alignLeft="@+id/startDate"
        android:layout_alignRight="@+id/startDate"
        android:layout_alignStart="@+id/startDate"
        android:layout_alignTop="@+id/startDate"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="10sp"
        />

    <View
        android:id="@+id/startDate"
        android:layout_width="60dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/icon"
        android:layout_toRightOf="@+id/icon" />

    <View
        android:id="@+id/icon"
        android:layout_width="4dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="6dip"
        android:background="@color/colorAccent"
        android:contentDescription="TODO" />


</RelativeLayout>